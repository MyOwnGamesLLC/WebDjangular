{
  "extends": "./tsconfig.app.json",
  "compilerOptions": {
    "outDir": "../../dist/out-tsc/apps/client-server",
    "baseUrl": ".",
    "types": [],
    "paths": {
      "@core/*": [
        "../../libs/core/*"
      ],
      "@plugins/*": [
        "../../libs/plugins/*"
      ],
      "@themes/*": [
        "../../libs/themes/*"
      ]
    }
  },
  "angularCompilerOptions": {
    "entryModule": "src/app/app.server.module#AppServerModule"
  },
  "include": [
    "**/*.ts",
    "../../libs/core/dynamic-page-loader/src/lib/core-dynamic-page-loader.module.ts",
    "../../libs/themes/**/*.ts"
  ]
}
